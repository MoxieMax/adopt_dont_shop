<h2>Add a Pet to this Application</h2>
<%= form_tag "#{@application.id}", :method => 'get' do %>
<p>
 <%= text_field_tag :search_text, params[:search_text] %>
 <%= submit_tag 'Search Pets' %>
</p>
<% end %>

<br>
<% @pets&.each do |pet| %>
  <h4><%= pet.name %></h4>
  <p>Age: 
    <%= pet.age %></p>
  <p>Breed: 
    <%= pet.breed %></p>
  <p>Adoptable: 
    <%= pet.adoptable %></p>
  <%= button_to "Apply for this Pet", "/applications/#{@application.id}", method: :post, params: {pet_id: "#{pet.id}"} %>
<% end %>